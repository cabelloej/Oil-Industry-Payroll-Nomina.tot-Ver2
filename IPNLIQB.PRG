   *********** BUSQUEDA DE HISTORICO ****************
   SELECT IPNHISTO
   SORT TO IPNTEMP2 ON FECHA /D FOR CEDULA = WCEDULA .AND. FECHA <= FECHALIQ .AND. NOMINA <> "UTLDA" .AND. NOMINA <> "LIQUI"
