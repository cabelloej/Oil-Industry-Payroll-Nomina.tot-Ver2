      @ 33,1  SAY "ANTIGUEDAD LEGAL         : "+STR(ACUMULADO,10,2)+" / "+STR(DIVIDIR,2)+" x "+STR(WTANTIGUE,4)+" x "+STR(FFAA,1)+"    Bs. "+STR(BSANTIGUE,10,2)

      @ 35,1  SAY "ANTIGUEDAD CONTRACTUAL   :                               Bs.           "

