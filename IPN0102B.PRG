PUSH KEY CLEAR
ON KEY LABEL F1 DO PROCIMP

SELECT 1
USE IPNcargos index ipncargos
STORE "CARGOS"  TO HEAD
SET COLOR TO W+/B
@ 5,0 CLEAR TO 18,79
@ 5,0 TO 18,79 DOUBLE
@ 5,40- (LEN(HEAD)/2) SAY HEAD
@ 7,5 SAY    "CODIGO      :"
@ 9,5 SAY    "DESCRIPCION :"
@ 11,5 SAY   "SUELDO BASIO:"
@ 13,5 SAY   "BONO COMPEN.:"
@ 15,5 SAY   "DIF.RETROAC.:"
@ 17,5 SAY   "COD.SISCOCO :"
STORE .T. TO DOIT
DO WHILE DOIT
   @ 9,18 SAY SPACE(30)
   STORE "CODIGO DEL CARGO, F1=VER, <ENTER>=SALIR" TO MES
   DO MENSAJE WITH MES
   STORE SPACE(10) TO WCODIGO
   @ 7,18 GET WCODIGO
   READ
   IF WCODIGO = SPACE(10)
      POP KEY
      SET COLOR TO
      CLOSE DATA
      CLOSE INDEX
      RETURN
   ENDIF
   SELECT 1
   FIND &WCODIGO
   IF EOF()
      STORE "CODIGO NO REGISTRADO. DESEA INGRESAR ? (S/N)" TO MES
      STORE "S" TO P1
      STORE "N" TO P2
      STORE " " TO RESP
      DO PIDE2 WITH P1,P2,MES,RESP
      IF RESP = "N"
         LOOP
      ENDIF
      APPEND BLANK
      REPLACE CODIGO WITH WCODIGO
      @ 9,18 GET DESCRI
      @ 11,18 GET SUELDO PICTURE "#####.##"
      @ 13,18 GET BONOCO   PICTURE "#####.##"
      @ 15,18 GET RETROACTI PICTURE "#####.##"
      @ 17,18 GET SISCOCO
      READ
   ELSE
      @ 9,18 SAY DESCRI
      @ 11,18 SAY SUELDO   PICTURE "#####.##"
      @ 13,18 SAY BONOCO PICTURE "#####.##"
      @ 15,18 SAY RETROACTI PICTURE "#####.##"
      @ 17,18 SAY SISCOCO
      STORE "OPCIONES: (M)ODIFICAR, (E)LIMINAR, (S)ALIR" TO MES
      STORE "S" TO P1
      STORE "M" TO P2
      STORE "E" TO P3
      STORE " " TO RESP
      DO PIDE3 WITH P1,P2,P3,MES,RESP
      IF RESP = "S"
         LOOP
      ENDIF
      IF RESP = "M"
         @ 9,18 GET DESCRI
         @ 11,18 GET SUELDO     PICTURE "#####.##"
         @ 13,18 GET BONOCO     PICTURE "#####.##"
         @ 15,18 GET RETROACTI  PICTURE "#####.##"
         @ 17,18 GET SISCOCO
         READ
      ENDIF
      IF RESP = "E"
         DELETE
         PACK
      ENDIF
   ENDIF
ENDDO

************
PROC PROCIMP
************
SAVE SCRE TO WSCREIMP
STORE "OPCIONES: (M)ONITOR, (I)MPRESORA, (S)ALIR" to mess
store "M" TO P1
STORE "I" TO P2
STORE "S" TO P3
STORE " " TO RESP
DO PIDE3 WITH P1, P2, P3, MESS, RESP
STORE "" TO WSALIDA
IF RESP = "M"
   STORE 20  TO WSALTO
   STORE "M" TO WSALIDA
   SET DEVI  TO SCRE
ELSE
   IF RESP = "I"
      STORE 55  TO WSALTO
      STORE "I" TO WSALIDA
      SET DEVI  TO PRINT
   ENDIF
ENDIF
*
IF RESP<>"S"
   STORE 100 TO WLINE
   STORE 0   TO WPAGE
   GO TOP
   DO WHILE .NOT. EOF()
      STORE WLINE+1 TO WLINE
      IF WLINE>=WSALTO
         DO HEADER
      ENDIF
      @ WLINE,01 SAY CODIGO
      @ WLINE,15 SAY DESCRI
      @ WLINE,44 SAY SUELDO
      @ WLINE,54 SAY BONOCO
      @ WLINE,64 SAY RETROACTI
      @ WLINE,75 SAY SISCOCO
      SKIP
   ENDDO
ENDIF
IF WSALIDA="M"
   STORE "OPRIMA <ENTER> PARA FINALIZAR" TO MES
   DO AVISO WITH MES
ELSE
   IF WSALIDA = "I"
      EJECT
   ENDIF
ENDIF
SET DEVI TO SCRE
REST SCRE FROM WSCREIMP
RETURN
